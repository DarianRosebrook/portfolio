---
---
{
  {% for post in site.categories.updates limit:9%}
    {% capture update %}{% cycle '1', '2', '3', '4'  %}{% endcapture %}
    {% if update == '1' %}{% endif %}
        <div class="grid-item" style="grid-colum: 12 / span 4"><a href="{{site.baseurl}}/now/#{{post.specific}}" class="block-link">
          <p><i class="far fa-{{post.icon}}"></i></p>
          <p><small><strong>{{post.date | date_to_string }}</strong></small></p>
          <h4>{{post.title}}</h4></a>
        </div>
    {% if update == '4' or forloop.last %}{% endif %}
  {% endfor %}
}
