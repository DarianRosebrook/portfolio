---
---
{
  "posts": [
    {% for post in site.categories.article  %}
      {
        "title": "{{post.title}}",
        "url": "{{site.baseurl}}{{post.url}}",
        "date": "{{post.when}}",
        "img": "{{post.img}}",
        "content": "{{post.metaDesc | escape}}",
        "class": "{{post.class}}",
        "type": "{{post.type}}"
      } {% if forloop.last %}{% else %}, {% endif %}
    {% endfor %}

  ];
}
